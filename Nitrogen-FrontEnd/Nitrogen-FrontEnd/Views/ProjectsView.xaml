<Page
    x:Class="Nitrogen_FrontEnd.Views.ProjectsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Content="Projects"
            Margin="10"
            HorizontalAlignment="Center" />

        <DataGrid
            x:Name="projectList"
            Margin="0,10,0,10"
            Grid.Row="1" />

        <Button
            Click="ViewProjectsEquipment_Click"
            Content="View Selected Project's Equipment"
            Height="30"
            Width="200"
            Grid.Row="2" />
    </Grid>


</Page>

