<Page
    x:Class="Nitrogen_FrontEnd.Views.SingleEquipmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Nitrogen_FrontEnd.Views"
    xmlns:controls="clr-namespace:Nitrogen_FrontEnd.Controls"
    mc:Ignorable="d"
    Title="SingleEquipmentView"
    Height="450"
    Width="800">
    <Grid
        Margin="10, 30, 10, 0">
        <controls:EquipmentCard
            x:Name="equipmentCard"
            Margin="10" />
        
        <Button
            Content="View Equipment Family"
            Click="ViewEquipmentFamily_Click"
            Height="30"
            Width="200"
            Grid.Row="2" />
    </Grid>
</Page>
