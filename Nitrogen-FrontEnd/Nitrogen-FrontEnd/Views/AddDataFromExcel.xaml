<Page
    x:Class="Nitrogen_FrontEnd.Views.AddDataFromExcel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Nitrogen_FrontEnd.Views"
    xmlns:controls="clr-namespace:Nitrogen_FrontEnd.Controls"
    mc:Ignorable="d"
    Title="AddDataFromExcel"
    Height="450"
    Width="800">
    <Grid>
        
        <StackPanel
            x:Name="stackPanel"
            Margin="50">
            <Button
                x:Name="BrowseBtn"
                Content="Browse Excel File"
                Click="HandleBrowseBtnClick" />
            <TextBlock
                Text="Selected File:"
                Margin="0 10 0 5" />
            <TextBox
                x:Name="txtFilePath"
                IsReadOnly="True"
                Margin="0 0 0 5" />
            <Button
                x:Name="BtnImport"
                Content="Import Data"
                Click="HandleImportBtnClick" />
        </StackPanel>
    </Grid>
</Page>
