<UserControl
    x:Class="Nitrogen_FrontEnd.Controls.Navigation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="800"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Top">

    <Grid
        HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            Background="LightGray"/>

        <StackPanel
            Grid.Column="1"
            Orientation="Horizontal"
            Background="LightGray">
            <Button
                Content="Add Data From Excel"
                Click="AddData_Click"
                Margin="30 5 10 5"
                Padding="5 0" />
            <Button
                Content="Projects View"
                Click="Projects_Click"
                Margin="10 5"
                Padding="5 0" />
            <Button
                Content="Search"
                Click="Search_Click"
                Margin="10 5 20 5"
                Padding="5 0" />
        </StackPanel>
    </Grid>
</UserControl>
